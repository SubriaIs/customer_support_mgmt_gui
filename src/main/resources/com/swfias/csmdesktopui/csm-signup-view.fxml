<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
            fx:controller="com.swfias.csmdesktopui.CSMSignupController" xmlns:fx="http://javafx.com/fxml">
    <content>
        <AnchorPane styleClass="root">
            <Button styleClass="button1" text="close" onAction="#onCloseClick" AnchorPane.rightAnchor="10"
                    AnchorPane.topAnchor="10"/>
            <GridPane hgap="10" vgap="10" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="50"
                      AnchorPane.rightAnchor="50">
                <VBox spacing="20" AnchorPane.topAnchor="100" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50"
                      GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <HBox alignment="CENTER">
                        <Text styleClass="label2" textAlignment="CENTER">Sign Up</Text>
                    </HBox>
                </VBox>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                <Label  styleClass="label3" text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <ComboBox fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="100"/>

                <Label styleClass="label3" text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label styleClass="label3" text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label styleClass="label3" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="signUpPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label styleClass="label3" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Label styleClass="label3" text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                <Label styleClass="label3" text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>

                <VBox spacing="20" AnchorPane.topAnchor="100" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="10">
                    <HBox alignment="CENTER">
                        <Button styleClass="button2" text="Join" onAction="#onSaveClick"/>
                    </HBox>
                </VBox>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="11"/>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="12"/>
            </GridPane>
        </AnchorPane>
    </content>
    <stylesheets>
        <URL value="@customerStaffSignupView.css"/>
    </stylesheets>
</ScrollPane>

