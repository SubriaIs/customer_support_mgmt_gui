<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<?import javafx.scene.control.DatePicker?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
            fx:controller="com.swfias.csmdesktopui.CSMCustomerController" xmlns:fx="http://javafx.com/fxml">
    <content>
        <AnchorPane styleClass="root">
            <Button styleClass="button1" text="Log Out" onAction="#onLogOutCustomerClick" AnchorPane.rightAnchor="10"
                    AnchorPane.topAnchor="10"/>
            <Label fx:id="customerNameLabel" styleClass="label1" AnchorPane.leftAnchor="10"
                   AnchorPane.topAnchor="10"/>
            <GridPane hgap="10" vgap="10" alignment="CENTER" AnchorPane.topAnchor="140" AnchorPane.leftAnchor="50"
                      AnchorPane.rightAnchor="50">
                <VBox spacing="20" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <HBox alignment="CENTER">
                        <Text styleClass="label2" textAlignment="CENTER">Create New Report</Text>
                    </HBox>
                </VBox>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label styleClass="label3" text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="reportTitle" prefWidth="500" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label styleClass="label3" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextArea fx:id="reportDescription" prefWidth="500" prefHeight="100" wrapText="true"
                          style="-fx-alignment: top-left;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label styleClass="label3" text="Severity:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <ComboBox fx:id="reportSeverity" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="300"/>
                <VBox spacing="20" GridPane.columnIndex="1"
                      GridPane.rowIndex="5">
                    <HBox alignment="CENTER">
                        <Button styleClass="button2" text="Create" onAction="#onCreateClick"/>
                    </HBox>
                </VBox>
                <Label text="" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                <GridPane hgap="10" vgap="10" GridPane.columnIndex="1" GridPane.rowIndex="8" alignment="CENTER">
                    <VBox spacing="20" GridPane.columnIndex="4" GridPane.rowIndex="0">
                        <HBox alignment="CENTER">
                            <Text styleClass="label2" textAlignment="CENTER">All report information</Text>
                        </HBox>
                    </VBox>
                </GridPane>
            <GridPane hgap="10" vgap="10" GridPane.columnIndex="1" GridPane.rowIndex="9" alignment="CENTER">
                <VBox GridPane.columnIndex="0"
                      GridPane.rowIndex="9">
                    <TextField fx:id="searchField" promptText="Search..." />
                    <ComboBox fx:id="filterComboBox" promptText="Filter by Column" />
                    <TableView fx:id="tableView">
                        <columns>
                            <TableColumn fx:id="column1" text="Title" />
                            <TableColumn fx:id="column2" text="Description" />
                            <TableColumn fx:id="column3" text="Created" />
                            <TableColumn fx:id="column4" text="Status" />
                            <TableColumn fx:id="column5" text="Severity" />
                            <TableColumn fx:id="column6" text="Solved By" />
                            <TableColumn fx:id="column7" text="Details" />
                            <TableColumn fx:id="column8" text="Fix Date" />
                        </columns>
                    </TableView>
                    <Button text="Export to Excel" onAction="#handleExportToExcel" />
                </VBox>
            </GridPane>
                <Label GridPane.columnIndex="0" GridPane.rowIndex="10"/>
            </GridPane>
            <stylesheets>
                <URL value="@customerView.css"/>
            </stylesheets>
        </AnchorPane>
    </content>
</ScrollPane>
